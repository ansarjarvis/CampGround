<% layout("layouts/boilerplates") %>
    <h1 class="text-center">All Campgrounds</h1>
    <% for(let campground of campgrounds) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= campground.image %> " alt="" class="img-fluid">
                </div>
                <div class="card-body col-md-8">
                    <h5>
                        <%= campground.title %>
                    </h5>

                    <p>
                        <%= campground.description %>
                    </p>
                    <h6 class="card-subtitle text-muted mb-3">
                        <%= campground.location %>
                    </h6>
                    <a class="card-link btn btn-primary" href="/campground/<%= campground.id %> ">
                        View <%= campground.title %>
                    </a>
                </div>
            </div>
        </div>

        <% } %>